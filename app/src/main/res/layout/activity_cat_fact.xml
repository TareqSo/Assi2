<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_cat_fact.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatFactActivity">

    <TextView
        android:id="@+id/textCatFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press the button to get a random fact "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonGetCatFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Cat Fact"
        android:layout_below="@id/textCatFact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- New TextView -->
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/buttonGetCatFact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- New Button -->
    <Button
        android:id="@+id/buttonTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Date and time"
        android:layout_below="@id/textTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
